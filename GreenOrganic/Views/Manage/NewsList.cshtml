@using System.Data

@{
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
    ViewBag.Crumb = "最新消息管理";
    ViewBag.nav = "n3";
    ViewBag.subNav = "n3-1";

    DataTable dt = (DataTable)ViewData["dt"];
    int row_count = 0;
    int page_count = 10;
    int page = (int)ViewData["page"];
    int pre_page = 0;
    int top_page = 0;
    int next_page = 0;
    int end_page = 0;
    int min_row = 0;
    int max_row = 0;
    int total_page = 0;

    string scenic_id = "";
    string area_name = "";
    string scenic_name = "";
    string scenic_count = "";
    string show = "";
    string show_class = "";
    string txt_scenic_query = (string)ViewData["txt_scenic_query"];
    string txt_area_query = (string)ViewData["txt_area_query"];
    string txt_sort = (string)ViewData["txt_sort"];
    string txt_a_d = (string)ViewData["txt_a_d"];

    string a_d = "";

    if(txt_a_d == "")
    {
        a_d = "asc";
    }
    else
    {
        a_d = "desc";
    }

    string class_area = "";
    string class_scenic_count = "";
    string class_status = "";

    switch(txt_sort)
    {
        case "area":
            class_area = a_d;
            break;
        case "status":
            class_status = a_d;
            break;
        case "scenic_count":
            class_scenic_count = a_d;
            break;
    }

    row_count = dt.Rows.Count;
    if(row_count % page_count > 0)
    {
        total_page = (row_count / page_count) + 1;
    }
    else
    {
        total_page = row_count / page_count;
    }

    if(page > total_page)
    {
        page = total_page;
    }
    else if(page < 1)
    {
        page = 1;
    }

    top_page = 1;

    if(page > 1)
    {
        pre_page = page - 1;
    }
    else
    {
        pre_page = 1;
    }

    if (total_page > page)
    {
        next_page = page + 1;
    }
    else
    {
        next_page = total_page;
    }

    end_page = total_page;

    min_row = 10 * (page - 1) + 1;
    max_row = 10 * page;
    if(max_row > row_count)
    {
        max_row = row_count;
    }

            }

@section Breadcrumb {
    <li>&#8227; 網站資訊維護</li>
    <li>&#8250; @ViewBag.Crumb</li>
}

<h3 class="h3">@ViewBag.Crumb</h3>

<div class="alert alert-warning w3-padding-small">※首頁最多可顯示 3 則最新消息，若您設定超過 3 則消息要顯示在首頁，首頁只會顯示排序最高的前 3 則。</div>

<form name="form1" id="form1" action="" method="post">
    <input type="hidden" id="txt_sort" name="txt_sort" value="@txt_sort" />
    <input type="hidden" id="txt_a_d" name="txt_a_d" value="@txt_a_d" />
    <header class="table-header">
        <div class="table-filter">
            <div class="form-inline">
                <label class="text-sm">日期</label> @* 如要顯示文字: 把 sr-only 拿掉 *@
                @* 用 datetimepicker (之類的東西) 選日期 *@
                <input type="text" class="form-control form-control-sm">
                <label class="text-sm">~</label>
                <input type="text" class="form-control form-control-sm">

                <label class="text-sm w3-margin-left">標題</label> @* 如要顯示文字: 把 sr-only 拿掉 *@
                <input type="text" class="form-control form-control-sm" placeholder="請輸入關鍵字...">
                <small class="text-muted">輸入多個關鍵字時，請使用逗號 , 作為區隔 ex. 浙江,臨安,山核桃</small>
            </div>
        </div><!-- table-filter //-->
    </header>

    <table class="table table-sm table-bordered table-striped table-hover">
        <colgroup>
            <col span="2" style="width: 6%">
            <col style="width: 12%">
            <col>
            <col span="2" style="width: 8%">
            <col style="width: 12%">
        </colgroup>
        <thead>
            <tr>
                <th class="text-xs-center">刪除</th> @* 文字置中: class="text-xs-center" / 置右: class="text-xs-right" *@
                <th class="text-xs-center">修改</th>
                <th>
                    <button class="text-xs-center th-sort-toggle">發佈日期</button>
                </th>
                <th>
                    @* 如不需要排序功能: 純文字即可 *@
                    標題
                </th>
                <th>
                    @* 點選排序功能 (點一下遞增 asc, 點兩下遞減 desc) *@
                    <button class="text-xs-center th-sort-toggle desc">排序</button>
                </th>
                <th>
                    <button class="text-xs-center th-sort-toggle" name="btn_status" id="btn_status" onclick="sort('status');" >狀態</button>
                </th>
                <th>
                    <button class="text-xs-center th-sort-toggle">顯示在首頁</button>
                </th>
            </tr>
        </thead>
        <tbody>
            @* 建議: 1頁10筆資料 *@
            @if (dt.Rows.Count > 0)
            {
            for (int i = min_row - 1; i < max_row; i++)
            {
                scenic_id = dt.Rows[i]["_SEQ_ID"].ToString();
                area_name = dt.Rows[i]["area_name"].ToString();
                scenic_name = dt.Rows[i]["scenic_name"].ToString();
                scenic_count = dt.Rows[i]["scenic_count"].ToString();
                if (dt.Rows[i]["status"].ToString() == "Y")
                {
                    show = "已發佈";
                    show_class = "label-success";
                }
                else
                {
                    show = "草稿";
                    show_class = "label-default";
                }
                    <tr>
                        <td class="text-xs-center">
                            <button type="button" class="btn btn-link text-danger" onclick="location.href='@Url.Content("~/Manage/Del?scenic_id=" + scenic_id)';"><i class="oi" data-glyph="trash"></i></button>
                        </td>
                        <td class="text-xs-center">
                            <button type="button" class="btn btn-link" onclick="location.href='@Url.Content("~/Manage/Edit?scenic_id=" + scenic_id)';"><i class="oi" data-glyph="pencil"></i></button>
                        </td>
                        <td class="text-xs-center">2016-05-01</td>
                        <td class="text-xs-left">印度尼西亞 泗水農業無毒種植拓展</td>
                        <td class="text-xs-center">10</td>
                        <td class="text-xs-center"><span class="w3-tag @show_class w3-round">@show</span></td>
                        <td class="text-xs-center">
                            <i class="oi text-primary" data-glyph="check"></i> @* 有顯示在首頁就打勾 *@
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td class="text-xs-left" colspan="7">
                        無資料
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <footer class="table-footer clearfix">
        <button type="button" class="btn btn-sm btn-success pull-xs-left" onclick="location.href='@Url.Content("~/Manage/Add")';">
            <i class="oi" data-glyph="plus"></i> 新增
        </button>
        <small class="pull-xs-right">第 1-10 筆，共 @row_count 筆</small>
        <ul class="pager pager-sm">
            <li>
                <a href="@Url.Content("~/Manage/NewsList?page=" + top_page.ToString())"><i class="oi" data-glyph="media-step-backward"></i></a>
            </li>
            <li>
                <a href="@Url.Content("~/Manage//NewsList?page=" + pre_page.ToString())"><i class="oi" data-glyph="caret-left"></i></a>
            </li>
            <li class="form-inline">
                <label>第</label>
                <input type="text" class="form-control form-control-sm text-xs-center" style="width:100px" name="page" id="page" value="@page">
                <label>頁，共 @total_page 頁</label>
            </li>
            <li>
                <a href="@Url.Content("~/Manage//NewsList?page=" + next_page.ToString())"><i class="oi" data-glyph="caret-right"></i></a>
            </li>
            <li>
                <a href="@Url.Content("~/Manage//NewsList?page=" + end_page.ToString())"><i class="oi" data-glyph="media-step-forward"></i></a>
            </li>
        </ul>
    </footer>
</form>
