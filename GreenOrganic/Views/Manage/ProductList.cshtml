@using System.Data
@{
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
    ViewBag.Crumb = "產品資料管理";
    ViewBag.nav = "n1";
    ViewBag.subNav = "n1-1";

    DataTable dt = (DataTable)ViewData["dt"];
    DataTable d_lang = (DataTable)ViewData["d_lang"];
    DataTable d_cate = (DataTable)ViewData["d_cate"];
    int row_count = 0;
    int page_count = 10;
    int page = (int)ViewData["page"];
    int pre_page = 0;
    int top_page = 0;
    int next_page = 0;
    int end_page = 0;
    int min_row = 0;
    int max_row = 0;
    int total_page = 0;

    string prod_id = "";
    string prod_name = "";
    string cate_id = "";
    string cate_name = "";
    string lang = "";
    string sort = "";
    string lang_name = "";
    string show = "";
    string show_class = "";
    string txt_prod_name_query = (string)ViewData["txt_prod_name_query"];
    string txt_sort = (string)ViewData["txt_sort"];
    string txt_a_d = (string)ViewData["txt_a_d"];
    string txt_lang = (string)ViewData["txt_lang"];
    string txt_cate = (string)ViewData["txt_cate"];
    string txt_title_query = (string)ViewData["txt_title_query"];

    string lang_selected = "";
    string cate_selected = "";

    string a_d = "";

    if (txt_a_d == "")
    {
        a_d = "asc";
    }
    else
    {
        a_d = "desc";
    }

    string class_prod_name = "";
    string class_lang = "";
    string class_cate = "";
    string class_sort = "";
    string class_status = "";

    switch (txt_sort)
    {
        case "prod_name":
            class_prod_name = a_d;
            break;
        case "cate_name":
            class_cate = a_d;
            break;
        case "lang":
            class_lang = a_d;
            break;
        case "sort":
            class_sort = a_d;
            break;
        case "status":
            class_status = a_d;
            break;
    }

    row_count = dt.Rows.Count;
    if (row_count % page_count > 0)
    {
        total_page = (row_count / page_count) + 1;
    }
    else
    {
        total_page = row_count / page_count;
    }

    if (page > total_page)
    {
        page = total_page;
    }
    else if (page < 1)
    {
        page = 1;
    }

    top_page = 1;

    if (page > 1)
    {
        pre_page = page - 1;
    }
    else
    {
        pre_page = 1;
    }

    if (total_page > page)
    {
        next_page = page + 1;
    }
    else
    {
        next_page = total_page;
    }

    end_page = total_page;

    min_row = 10 * (page - 1) + 1;
    max_row = 10 * page;
    if (max_row > row_count)
    {
        max_row = row_count;
    }

}

