@using System.Data
@{
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
    ViewBag.Crumb = "海外實績專案管理";
    ViewBag.nav = "n2";
    ViewBag.subNav = "n2-3";

    DataTable d_lang = (DataTable)ViewData["d_lang"];
    DataTable dt = (DataTable)ViewData["dt"];
    DataTable d_country = (DataTable)ViewData["d_country"];
    DataTable d_area = (DataTable)ViewData["d_area"];

    int row_count = 0;
    int page_count = 10;
    int page = (int)ViewData["page"];
    int pre_page = 0;
    int top_page = 0;
    int next_page = 0;
    int end_page = 0;
    int min_row = 0;
    int max_row = 0;
    int total_page = 0;

    string proj_id = "";
    string proj_name = "";
    string n_sort = "";
    string is_index = "";
    string area_name = "";
    string country_name = "";
    string plant_name = "";
    string lang = "";
    string lang_name = "";
    string show = "";
    string show_class = "";
    string txt_sort = (string)ViewData["txt_sort"];
    string txt_a_d = (string)ViewData["txt_a_d"];
    string txt_lang = (string)ViewData["txt_lang"];
    string txt_title_query = (string)ViewData["txt_title_query"];
    string txt_country = (string)ViewData["txt_country"];
    string txt_area = (string)ViewData["txt_area"];


    string lang_selected = "";
    string country_selected = "";
    string area_selected = "";

    string a_d = "";

    if (txt_a_d == "")
    {
        a_d = "asc";
    }
    else
    {
        a_d = "desc";
    }

    string class_country = "";
    string class_lang = "";
    string class_status = "";
    string class_area = "";
    string class_sort = "";
    string class_index = "";


    switch (txt_sort)
    {
        case "country_name":
            class_country = a_d;
            break;
        case "lang":
            class_lang = a_d;
            break;
        case "status":
            class_status = a_d;
            break;
        case "area_name":
            class_area = a_d;
            break;
        case "sort":
            class_sort = a_d;
            break;
        case "is_index":
            class_index = a_d;
            break;
    }

    row_count = dt.Rows.Count;
    if (row_count % page_count > 0)
    {
        total_page = (row_count / page_count) + 1;
    }
    else
    {
        total_page = row_count / page_count;
    }

    if (page > total_page)
    {
        page = total_page;
    }
    else if (page < 1)
    {
        page = 1;
    }

    top_page = 1;

    if (page > 1)
    {
        pre_page = page - 1;
    }
    else
    {
        pre_page = 1;
    }

    if (total_page > page)
    {
        next_page = page + 1;
    }
    else
    {
        next_page = total_page;
    }

    end_page = total_page;

    min_row = 10 * (page - 1) + 1;
    max_row = 10 * page;
    if (max_row > row_count)
    {
        max_row = row_count;
    }


}

