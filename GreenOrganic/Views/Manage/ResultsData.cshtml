        function upload(c_sty)
        {
            if ($("#pic_" + c_sty).val().length > 0) {
                //ajaxFileUpload('pic_small','small_img');
                ajaxFileUpload(c_sty);
            }
            else {
                alert("請選擇圖片");
            }
