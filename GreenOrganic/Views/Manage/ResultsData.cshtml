
@{
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
    ViewBag.Crumb = "海外實績專案管理";
    ViewBag.nav = "n2";
    ViewBag.subNav = "n2-3";
}

@section IncludeCSS {
    <link rel="stylesheet" href="~/Content/css/vendor/bootstrap-tagsinput.css">
}

@section IncludeScript {
    @* 來源:https://bootstrap-tagsinput.github.io/bootstrap-tagsinput/examples/
       用在種植物名稱
    *@
    <script src="~/Content/js/bootstrap/tagsinput.js"></script>
}

@section Breadcrumb {
    <li>&#8227; 海外實績維護</li>
    <li>&#8250; @ViewBag.Crumb</li>
}

<h3 class="h3">@ViewBag.Crumb<small class="sub"><span class="w3-large">&#187;</span> 修改</small></h3>

<form class="form form-sm">
    <section class="col-xs-6 m-b-1">
        <div class="form-group row">
            <label class="col-xs-2 form-control-label text-xs-right">
                <span class="text-danger">*</span> 語系
            </label>
            <div class="col-xs-10">
                <select class="form-control form-control-sm" required>
                    <option>繁體中文</option>
                    <option>简体中文</option>
                    <option>English</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-xs-2 form-control-label text-xs-right">
                <span class="text-danger">*</span> 地區分類
            </label>
            <div class="col-xs-10">
                <select class="form-control form-control-sm" required>
                    <optgroup label="中國">
                        <option>蘇州</option>
                        <option>雲南昆明</option>
                        <option>寧夏</option>
                    </optgroup>
                    <optgroup label="柬埔寨">
                        <option>寨磅針</option>
                        <option>干拉</option>
                    </optgroup>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-xs-2 form-control-label text-xs-right">
                <span class="text-danger">*</span> 專案名稱
            </label>
            <div class="col-xs-10">
                <input type="text" class="form-control form-control-sm" required>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-xs-2 form-control-label text-xs-right">
                <span class="text-danger">*</span> 種植物名稱
            </label>
            <div class="col-xs-10">
                <input type="text" data-role="tagsinput" placeholder="輸入名稱後按Enter..." >
            </div>
        </div>
        @* 目前隱藏，若客戶有需求再製作
        <div class="form-group row">
            <label class="col-xs-2 form-control-label text-xs-right">
                分公司
            </label>
            <div class="col-xs-10">
                <select class="form-control form-control-sm" required>
                    <option>- 請選擇 -</option>
                    <option>上海分公司</option>
                    <option>大地還原生物科技(柬埔寨)有限公司</option>
                    <option>大地還原生物科技華東總代理</option>
                </select>
            </div>
        </div> *@
        <div class="form-group row">
            <label class="col-xs-2 form-control-label text-xs-right">
                排序
            </label>
            <div class="col-xs-10">
                <input type="number" min="0" value="0" class="form-control form-control-sm">
                <small class="text-muted">數字愈大排在愈上面</small>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-xs-2 form-control-label text-xs-right">
                狀態
            </label>
            <div class="col-xs-10">
                <label class="c-input c-radio">
                    <input type="radio" name="show" id="show" value="Y" checked>
                    <span class="c-indicator"></span>
                    <span class="text-sm">發佈</span>
                </label>
                <label class="c-input c-radio m-r-0">
                    <input type="radio" name="show" id="show" value="N">
                    <span class="c-indicator"></span>
                    <span class="text-sm">草稿</span>
                </label>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-xs-2 form-control-label text-xs-right">
                首頁顯示
            </label>
            <div class="col-xs-10">
                <label class="c-input c-radio">
                    <input type="radio" name="hot" id="hot" value="Y" checked>
                    <span class="c-indicator"></span>
                    <span class="text-sm">顯示在首頁</span>
                </label>
                <label class="c-input c-radio m-r-0">
                    <input type="radio" name="hot" id="hot" value="N">
                    <span class="c-indicator"></span>
                    <span class="text-sm">不顯示在首頁</span>
                </label>
            </div>
        </div>
    </section>
    <section class="col-xs-6 m-b-1">
        <div class="form-group row">
            <label class="col-xs-2 form-control-label text-xs-right">
                實績照片
            </label>
            <div class="col-xs-10">
                @* 瀏覽&上傳檔案 *@
                <input type="file" name="pic_S" id="pic_S" accept="image/*" class="form-control form-control-sm">
                <button type="button" name="btn_small_pic" onclick="upload('S');" class="btn btn-sm btn-success oi m-t-small" data-glyph="data-transfer-upload">
                    上傳
                </button>
                <br>
                @* 照片縮圖(上傳圖片後顯示) *@
                <ol class="upload-img list-inline" id="c_img_S" name="c_img_small">
                    <li>
                        <button type="button" class="close text-sm" title="按此刪除">&#10005;</button>
                        <img src="" alt="">
                    </li>
                </ol>
                <small class="text-muted">可上傳多張照片，建議尺寸寬度不超過 1064px，每張圖最大不可超過 500kb</small>
            </div>
        </div>
    </section>

    <h4 class="h4 clear">實績內容</h4>
    <div class="alert alert-warning w3-padding-small text-sm">
        <strong>編輯器注意事項: </strong><br>
        從 WORD 複製文字時，請使用下方的 <img src="~/Content/images/sys/icon-word.jpg" /> 圖示來貼上 WORD 文字，避免跑版<br>
        編輯器上傳圖片或新增表格等時，請勿設定寬度及高度(將數字刪除) ，以免行動裝置顯示時會跑版。<br>
        檔案尺寸寬度超過 1600 或 高度超過1200 的圖片會被壓縮(PNG透明背景會變成不透明)<br>
        youtube 可勾選「用自適應縮放模式」
    </div>
    @* 編輯器(含圖片上傳功能) *@
    <textarea class="form-control" rows="15" placeholder="請輸入海外實績內容"></textarea>

    <div class="form-action">
        <button type="button" name="btn_ok" onclick="form_ok();" class="btn btn-primary btn-sm col-xs-offset-1 oi" data-glyph="circle-check">
            存檔確認
        </button>
        <button type="button" id="btn_back" name="btn_back" onclick="location.href='ResultsList'" class="btn btn-secondary btn-sm oi" data-glyph="circle-x">
            回列表
        </button>
    </div>
</form>